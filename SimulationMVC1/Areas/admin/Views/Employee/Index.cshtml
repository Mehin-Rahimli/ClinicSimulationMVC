@model ICollection<GetEmployeeVM>

@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Employee Table</h4>
                <p>@Html.Raw(TempData["FileWarning"])</p>
                <div class="table-responsive">
                    <a asp-action="create" class="btn btn-success">Create Employee</a>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Surname
                                </th>
                                 <th>
                                    Department
                                </th>
                                <th>
                                    Image
                                </th>

                                <th>
                                    Settings
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (GetEmployeeVM employeeVM in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        <p>@count</p>
                                    </td>
                                    <td>
                                        <p>@employeeVM.Name</p>
                                    </td>
                                    <td>
                                        <p>@employeeVM.Surname</p>
                                    </td>
                                    <td>
                                        <p>@employeeVM.DepartmentName</p>
                                    </td>
                                    <td>
                                        <p><img src="~/assets/img/@employeeVM.Image"/></p>
                                    </td>
                                    <td>
                                        <a asp-action="update" asp-route-id="@employeeVM.Id" class="btn btn-warning btn-info"><i class="mdi mdi-grease-pencil"></i></a>
                                        <a asp-action="delete" asp-route-id="@employeeVM.Id" class="cus-delete btn btn-danger btn-info"><i class="mdi mdi-delete"></i></a>
                                        <a class="btn btn-primary btn-info"><i class="mdi mdi-open-in-new"></i></a>
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

