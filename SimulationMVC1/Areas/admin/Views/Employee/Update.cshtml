@model UpdateEmployeeVM


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Employee</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" type="text" class="form-control" id="exampleInputName1" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname">Surname</label>
                    <input asp-for="Surname" type="text" class="form-control" id="exampleInputName1" placeholder="Surname">
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DepartmentId">Department</label>
                    <select asp-for="DepartmentId" type="text" class="form-control" id="exampleInputName1" asp-items="new SelectList(Model.Departments,(nameof(Department.Id)),(nameof(Department.Name)))">
                        <option selected disabled value=""></option>Choose Category
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div>
                        <img src="~/assets/img/@Model.ExistingImage" alt="Current Image" style="max-width: 150px;">
                    </div>
                    <label asp-for="Image">Image</label>
                    <input asp-for="Image" type="file" class="form-control" id="exampleInputName1" placeholder="Image" accept="image/*">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FbLink">Facebook</label>
                    <input asp-for="FbLink" type="text" class="form-control" id="exampleInputName1" placeholder="FbLink">
                    <span asp-validation-for="FbLink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TwitterLink">Twitter</label>
                    <input asp-for="TwitterLink" type="text" class="form-control" id="exampleInputName1" placeholder="TwitterLink">
                    <span asp-validation-for="TwitterLink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InstagramLink">Instagram</label>
                    <input asp-for="InstagramLink" type="text" class="form-control" id="exampleInputName1" placeholder="InstagramLink">
                    <span asp-validation-for="InstagramLink" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>
